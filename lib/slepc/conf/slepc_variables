include ${PETSC_DIR}/lib/petsc/conf/variables

# Variables specific to SLEPc that can be employed in user makefiles
SLEPC_LIB_DIR       = ${SLEPC_DIR}/${PETSC_ARCH}/lib
SLEPCCONF_H         = ${SLEPC_DIR}/${PETSC_ARCH}/include/slepcconf.h

SLEPC_INCLUDE       = -I${SLEPC_DIR}/include -I${SLEPC_DIR}/${PETSC_ARCH}/include
SLEPC_CC_INCLUDES   = ${SLEPC_INCLUDE} ${SLEPC_EXTERNAL_INCLUDES_BASIC} ${PETSC_CC_INCLUDES}
SLEPC_FC_INCLUDES   = ${SLEPC_INCLUDE} ${PETSC_FC_INCLUDES}

SLEPC_CCPPFLAGS     = ${SLEPC_INCLUDE} ${SLEPC_EXTERNAL_INCLUDES_BASIC}
SLEPC_CXXCPPFLAGS   = ${SLEPC_INCLUDE} ${SLEPC_EXTERNAL_INCLUDES_BASIC}
SLEPC_FCPPFLAGS     = ${SLEPC_INCLUDE}
SLEPC_CUDACPPFLAGS  = ${SLEPC_INCLUDE} ${SLEPC_EXTERNAL_INCLUDES_BASIC}
SLEPC_C_SH_LIB_PATH = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR}
SLEPC_F_SH_LIB_PATH = ${FC_LINKER_SLFLAG}${SLEPC_LIB_DIR}

# Redefine variables in PETSc makefiles
INSTALL_LIB_DIR = ${SLEPC_LIB_DIR}
CCPPFLAGS       = ${SLEPC_CCPPFLAGS} ${PETSC_CCPPFLAGS}
CXXCPPFLAGS     = ${SLEPC_CXXCPPFLAGS} ${PETSC_CXXCPPFLAGS}
FCPPFLAGS       = ${SLEPC_FCPPFLAGS} ${PETSC_FCPPFLAGS}
CUDACPPFLAGS    = ${SLEPC_CUDACPPFLAGS} ${PETSC_CUDACPPFLAGS}

# Variables for the different SLEPc modules
SLEPC_SYS_LIB_BASIC = -lslepcsys${LIB_NAME_SUFFIX}
SLEPC_MFN_LIB_BASIC = -lslepcmfn${LIB_NAME_SUFFIX} ${SLEPC_SYS_LIB_BASIC}
SLEPC_LME_LIB_BASIC = -lslepclme${LIB_NAME_SUFFIX} ${SLEPC_SYS_LIB_BASIC}
SLEPC_EPS_LIB_BASIC = -lslepceps${LIB_NAME_SUFFIX} ${SLEPC_LME_LIB_BASIC}
SLEPC_SVD_LIB_BASIC = -lslepcsvd${LIB_NAME_SUFFIX} ${SLEPC_EPS_LIB_BASIC}
SLEPC_PEP_LIB_BASIC = -lslepcpep${LIB_NAME_SUFFIX} ${SLEPC_EPS_LIB_BASIC}
SLEPC_NEP_LIB_BASIC = -lslepcnep${LIB_NAME_SUFFIX} ${SLEPC_PEP_LIB_BASIC}
SLEPC_LIB_BASIC     = -lslepcnep${LIB_NAME_SUFFIX} -lslepcpep${LIB_NAME_SUFFIX} -lslepcsvd${LIB_NAME_SUFFIX} -lslepceps${LIB_NAME_SUFFIX} -lslepcmfn${LIB_NAME_SUFFIX} -lslepclme${LIB_NAME_SUFFIX} -lslepcsys${LIB_NAME_SUFFIX}

SLEPC_SYS_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_SYS_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_MFN_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_MFN_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_LME_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_LME_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_EPS_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_EPS_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_SVD_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_SVD_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_PEP_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_PEP_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_NEP_LIB_NOPETSC = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_NEP_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}
SLEPC_LIB_NOPETSC     = ${SLEPC_C_SH_LIB_PATH} -L${SLEPC_LIB_DIR} ${SLEPC_LIB_BASIC} ${SLEPC_EXTERNAL_LIB_BASIC}

SLEPC_SYS_LIB   = ${SLEPC_SYS_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_MFN_LIB   = ${SLEPC_MFN_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_LME_LIB   = ${SLEPC_LME_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_EPS_LIB   = ${SLEPC_EPS_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_SVD_LIB   = ${SLEPC_SVD_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_PEP_LIB   = ${SLEPC_PEP_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_NEP_LIB   = ${SLEPC_NEP_LIB_NOPETSC} ${PETSC_SNES_LIB}
SLEPC_LIB       = ${SLEPC_LIB_NOPETSC} ${PETSC_SNES_LIB}

# Redefine variable used to build shared libraries
SHLIBS = libslepcsys${LIB_NAME_SUFFIX} libslepcmfn${LIB_NAME_SUFFIX} libslepclme${LIB_NAME_SUFFIX} libslepceps${LIB_NAME_SUFFIX} libslepcsvd${LIB_NAME_SUFFIX} libslepcpep${LIB_NAME_SUFFIX} libslepcnep${LIB_NAME_SUFFIX}

# Include definitions customized by configuration
include ${SLEPC_DIR}/${PETSC_ARCH}/lib/slepc/conf/slepcvariables

